@model Shopping.Models.StateViewModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--Codigo de País necesario en el post para manipularlo en la vista-->
            <input type="hidden" asp-for="CountryId" />
            <partial name="_State" />

            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />

                <!--Lo regresamos a la vista Details-->
                <a asp-action="Details" asp-route-id="@Model?.CountryId" class="btn btn-outline-success">Volver</a>
            </div>
        </form>
    </div>
</div>
<br />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
