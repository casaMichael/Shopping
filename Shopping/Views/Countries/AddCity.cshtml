@model Shopping.Models.CityViewModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Ciudad</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--Codigo de País necesario en el post para manipularlo en la vista-->
            <input type="hidden" asp-for="StateId" />
            <partial name="_City" />

            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />

                <!--Lo regresamos a la vista Details-->
                <a asp-action="DetailsState" asp-route-id="@Model?.StateId" class="btn btn-outline-success">Volver</a>
            </div>
        </form>
    </div>
</div>
<br />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
